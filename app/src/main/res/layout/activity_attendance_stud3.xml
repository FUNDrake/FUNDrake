<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvAttend3StudWel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Attendance"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvAttend3StudWel"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectCode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:text=" "
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text=" " />

                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectAttend1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="330dp"
                    android:text="1"
                    android:layout_marginTop="35dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"

                     />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectCode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:text=" "
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text=" " />

                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectAttend2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="330dp"
                    android:text="2"
                    android:layout_marginTop="35dp"
                    android:textSize="25sp"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectCode3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:text=" "
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text=" " />

                <TextView
                    android:id="@+id/Stud3tvAttendStudSubjectAttend3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="330dp"
                    android:text="3"
                    android:layout_marginTop="35dp"
                    android:textSize="25sp"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
    </RelativeLayout>