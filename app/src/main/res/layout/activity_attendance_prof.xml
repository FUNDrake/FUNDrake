<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Mark Attendance" />

    <TextView
        android:id="@+id/tvAttendProfYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="95dp"
        android:text="Year : " />

    <Spinner
        android:id="@+id/spinnerAttendProfYear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="180dp" />

    <TextView
        android:id="@+id/tvAttendProfDep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="125dp"
        android:text="Department :"
        android:layout_marginStart="87dp" />

    <Spinner
        android:id="@+id/spinnerAttendProfDep"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="180dp" />

    <TextView
        android:id="@+id/tvAttendProfSem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="155dp"
        android:text="Semester :"
        android:layout_marginStart="101dp" />

    <Spinner
        android:id="@+id/spinnerAttendProfSem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="180dp" />

    <TextView
        android:id="@+id/tvAttendProfSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="185dp"
        android:text="Subject :"
        android:layout_marginStart="113dp" />

    <Spinner
        android:id="@+id/spinnerAttendProfSub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="180dp" />



    <TextView
        android:id="@+id/tvAttendProfPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="215dp"
        android:text="Period :"
        android:layout_marginStart="118dp" />

    <Spinner
        android:id="@+id/spinnerAttendProfPeriod"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="180dp" />


    <Button
        android:id="@+id/buttonGetClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="265dp"
        android:text="Get Class" />

    <Button
        android:id="@+id/buttonSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="265dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/buttonGetClass"
        android:layout_toRightOf="@+id/buttonGetClass"
        android:text="Select All" />

    <Button
        android:id="@+id/buttonSelectNone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="265dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/buttonSelectAll"
        android:layout_toRightOf="@+id/buttonSelectAll"
        android:text="Select None" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_viewStud"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/buttonAttendProfSubmit"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="70dp"
        />

    <Button
        android:id="@+id/buttonAttendProfSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="50dp"
        android:text="Submit" />

</RelativeLayout>